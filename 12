
float xPos = 10;

void setup() {  // setup() runs once
  size(500, 500);
  frameRate(10);
    background(0);
    
}
 int x=0;
void draw() {
  if (x<500){
  stroke(0);
  line(x, 0, x, 500);
  stroke(255);
  line(x, mouseY, x, 500);
  x=x+10;
  if (x>=500)
  {
    x=0;
  }
  }
}
void mouseMoved(){
  loop();
}
